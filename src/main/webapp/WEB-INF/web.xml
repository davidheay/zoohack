<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>setUbicacion</servlet-name>
        <servlet-class>Controladores.setUbicacion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ConsultaRuta</servlet-name>
        <servlet-class>Controladores.ConsultaRuta</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ConsultaAreas</servlet-name>
        <servlet-class>Controladores.ConsultaAreas</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>Controladores.LoginController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>setUbicacion</servlet-name>
        <url-pattern>/setUbicacion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ConsultaAreas</servlet-name>
        <url-pattern>/ConsultaAreas</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ConsultaRuta</servlet-name>
        <url-pattern>/ConsultaRuta</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/LoginController</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>
            LoginController
        </welcome-file>
    </welcome-file-list>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
